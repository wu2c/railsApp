<%= article_form.fields_for :tags do |tag_form| %>  
		<tr><td><%= tag_form.label :tagname, 'Tag' %></td></tr>
		<tr><td><%= tag_form.text_field :tagname %></td></tr>
		<% unless tag_form.object.nil? || tag_form.object.new_record? %>
		<tr><td><%= tag_form.label :_destroy, 'Remove:' %></td></tr>
		<tr><td><%= tag_form.check_box :_destroy %></td></tr>
		 <% end %>
 <% end %> 
 
